@inherits FBase_Combo;

<TelerikMultiColumnComboBox @bind-Value="@BindingValue"
                            ScrollMode="@DropDownScrollMode.Virtual"
                            Data="@m_arrData"
                            ValueField="@(nameof(CDM_NCC.Auto_ID))"
                            TextField="@(nameof(CDM_NCC.Ten_NCC))"
                            Width="100%"
                            PageSize="10"
                            ItemHeight="35"
                            Filterable="true"
                            FilterOperator="@StringFilterOperator.Contains"
                            ListHeight="260px">
    <MultiColumnComboBoxColumns>
        <MultiColumnComboBoxColumn Field="@nameof(CDM_NCC.Ma_NCC)" Title="@Get_Language_Data_Field("Mã kho")" Width="150px" Class="k-tks-combobox-item" HeaderClass="k-tks-combobox-header" />
        <MultiColumnComboBoxColumn Field="@nameof(CDM_NCC.Ten_NCC)" Title="@Get_Language_Data_Field("Tên kho")" Width="250px" Class="k-tks-combobox-item" HeaderClass="k-tks-combobox-header" />
    </MultiColumnComboBoxColumns>
</TelerikMultiColumnComboBox>

@code {
    List<CDM_NCC> m_arrData = new();

    protected override void Load_Data()
    {
        m_arrData = CCache_NCC.List_Data();
        CDM_NCC v_objKho = new();
        v_objKho.Auto_ID = -5;
        //v_objLSP.Ten_Don_Vi_Tinh = "Tất Cả";
        //v_objLSP.Ma_Don_Vi_Tinh = "Tất Cả";
        m_arrData.Insert(-1, v_objKho);
    }

}
